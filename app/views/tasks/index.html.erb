<h1>Tasks#index</h1>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%= link_to "Show task page", "/tasks/#{task.id}" %>
  <%= link_to "Edit task", "/tasks/#{task.id}/edit" %>
  <%= link_to "Delete task", "/tasks/#{task.id}", method: :delete %>
<% end %>

<p><%= link_to "Create task", "/tasks/new" %></p>
