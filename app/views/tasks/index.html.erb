<h1>Tasks#index</h1>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%= link_to "Show task page", edit_task(task) %>
  <%= link_to "Edit task", task_path(task) %>
  <%= link_to "Delete", tasks_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<p><%= link_to "Create task", "/tasks/new" %></p>
